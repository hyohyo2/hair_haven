<div class="container my-3">
  <% flash.each do |message_type, message| %>
    <div class="flash-message <%= message_type %>"><%= message %></div>
  <% end %>

  <div class="text-center">
    <h2>商品登録</h2>
    <%= render "layouts/errors", obj: @item %>
  </div>

  <%= form_with model: [:admin, @item] do |f| %>
    <div class="field d-flex">
      <div class="col-3 text-center">
        <label>画像</label>
      </div>
      <div class="col-6 text-center">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
    <div class="field d-flex">
      <div class="col-3 text-center">
        <label>商品名</label>
      </div>
      <div class="col-6 text-center">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="field d-flex">
      <div class="col-3 text-center">
        <label>税抜金額</label>
      </div>
      <div class="col-3 text-center d-flex">
        <%= f.text_field :price, class: "form-control" %>円
      </div>
    </div>
    <div class="field d-flex">
      <div class="col-3 text-center">
        <label>サイズ</label>
      </div>
      <div class="col-6 text-center">

      </div>
    </div>
    <div class="field d-flex">
      <div class="col-3 text-center">
        <label>長さ</label>
      </div>
      <div class="col-6 text-center">

      </div>
    </div>
    <div class="field d-flex">
      <div class="col-3 text-center">
        <label>カラー</label>
      </div>
      <div class="col-6 text-center">

      </div>
    </div>
    <div class="field d-flex">
      <div class="col-3 text-center">
        <label>タグ</label>
      </div>
      <div class="col-6 text-center">

      </div>
    </div>

    <div class="field d-flex">
      <div class="col-3 text-center">
        <label>商品説明</label>
      </div>
      <div class="col-6 text-center">
        <%= f.text_area :detail, class: "form-control" %>
      </div>
    </div>
    <div class="field d-flex">
      <div class="col-3 text-center">
        <label>販売ステータス</label>
      </div>
      <div class="col-6 text-center">

      </div>
    </div>

  <% end %>

</div>